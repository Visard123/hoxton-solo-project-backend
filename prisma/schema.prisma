// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Restaurant{
  id Int @id @default(autoincrement())
  name String
  image String

}

model Food{
  id Int @id @default(autoincrement())
  title String @unique
  image String
  price  Float
  restaurantId Int
  orders Order[]
  
  
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String 
  orders Order[]
}


model Order{
  id Int @id @default(autoincrement())
  quantity Int
  userId Int 
  users User @relation(fields: [userId], references: [id])
  foodId Int
  foods Food @relation(fields: [foodId], references: [id])

}


